root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[docker-compose.yml]
indent_size = 4
indent_style = space

[*.php]
indent_size = 4
indent_style = space

[*.js]
indent_size = 2
indent_style = space

[*.css]
indent_size = 2
indent_style = space

[*.blade.php]
indent_size = 4
indent_style = space

[*.json]
indent_size = 2
indent_style = space

[*.xml]
indent_size = 2
indent_style = space
